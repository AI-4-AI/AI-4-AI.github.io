    {[...Array(2)].flatMap(() => [
      { symbol: 'OpenAI ChatGPT', price: 97, change: 2.5, logo: '/logos/chatgpt-logo.png', url: 'https://www.openai.com' },
      { symbol: 'Microsoft Copilot', price: 95, change: -1.2, logo: '/logos/microsoft_copilot.png' },
