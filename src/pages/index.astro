<Layout metadata={metadata}>
  <div class="stock-banner" onMouseOver={() => isPaused = true} onMouseOut={() => isPaused = false}>
    <div class="ticker" style={isPaused ? 'animation-play-state: paused;' : ''}>
      {[
        { symbol: 'ChatGPT', price: 99, change: 2.5, logo: '/logos/chatgpt-logo.png', url: 'https://www.openai.com', },
        { symbol: 'Microsoft Copilot', price: 120, change: -1.2, logo: '/logos/microsoft_copilot.png' },
        { symbol: 'OpenAI', price: 150, change: 0.5, logo: '/logos/chatgpt-logo.png' },
        // Add more stock items as needed
        ].map(({ symbol, price, change, logo, url }) => (
      <a href={url} target="_blank" class="stock-item">
        <img src={logo} alt={`${symbol} logo`} class="stock-logo" />
        <span>{symbol}: ${price} <span class={change >= 0 ? 'text-green-500' : 'text-red-500'}>({change}%)</span></span>
      </a>
    ))}
  </div>
</div>
  <style>
    .stock-banner {
      overflow: hidden;
      white-space: nowrap;
      display: flex;
      padding: 10px;
      background-color: #f5f5f5; /* Light gray background */
      border: 1px solid #ddd; /* Border for styling */
      border-radius: 5px; /* Rounded corners */
    }
  
    .ticker {
      display: flex;
      animation: ticker 30s linear infinite;
    }
  
    .stock-item {
      display: flex;
      align-items: center;
      margin-right: 24px;
      font-size: 16px;
      color: #333; /* Text color */
    }
  
    .stock-logo {
      width: 24px;
      height: 24px;
      margin-right: 8px;
    }
  
    @keyframes ticker {
      from {
        transform: translateX(100%);
      }
      to {
        transform: translateX(-100%);
      }
    }
  
    /* Pause animation when hovered */
    .stock-banner:hover .ticker {
      animation-play-state: paused;
    }
  </style>

